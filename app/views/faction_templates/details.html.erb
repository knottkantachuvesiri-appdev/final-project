      <dd>
        <%= @faction.civ.name %>
      </dd>
    </div>      
  </div>
  <div class="row mb-3">
    <div class="col md-3">    
      <dt>
        Leader
      </dt>
      <dd>
        <%= @faction.leader.name %>
      </dd>
    </div>            
  </div>  

  <div class="row mb-3">
    <div class="col md-3">    
      <dt>
        Civ ability
      </dt>
      <dd>
        <%= @faction.civ.civ_ability %>
      </dd>
    </div>  
