<h1>
  <%= @faction.civ.name %> Civilization - <%= @faction.leader.name %>
</h1>

<div>
  <div>
    <a href="/factions">
      Go back
    </a>
  </div>

  <div>
    <a href="/new_faction_form">
      Add a new faction
    </a>  
  </div>

  <div>
    <a href="/existing_faction_form/<%= @faction.id %>">
      Edit faction
    </a>
  </div>

  <div>
    <a href="/delete_faction/<%= @faction.id %>">
      Delete faction
    </a>
  </div>
</div>

<dl>
  
  <div class="row mb-3">
    <div class="col md-3">    
      <dt>
        Civ
